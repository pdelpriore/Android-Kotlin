<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAbout"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="16dp">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/aboutConcu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/concu"
        android:fontFamily="@font/roboto_light"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAbout" />

    <ImageView
        android:id="@+id/aboutLogoSns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/aboutConcu"
        app:layout_constraintStart_toStartOf="@+id/aboutConcu"
        app:layout_constraintTop_toBottomOf="@+id/aboutConcu"
        app:srcCompat="@drawable/logo_sns" />

    <TextView
        android:id="@+id/aboutAgence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/agence1"
        android:fontFamily="@font/roboto_light"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/aboutLogoSns"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/aboutLogoSns"
        app:layout_constraintTop_toBottomOf="@+id/aboutLogoSns" />

    <TextView
        android:id="@+id/aboutAgence2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/agence2"
        android:fontFamily="@font/roboto_light"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/aboutAgence"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/aboutAgence"
        app:layout_constraintTop_toBottomOf="@+id/aboutAgence" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/roboto"
            android:text="@string/url"
            android:textSize="14dp"
            android:textColor="@color/border"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/about_background"
            app:layout_constraintEnd_toEndOf="@+id/aboutAgence2"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/aboutAgence2"
            app:layout_constraintTop_toBottomOf="@+id/aboutAgence2" />

</android.support.constraint.ConstraintLayout>